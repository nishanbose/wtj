div(ng-include='"components/navbar/navbar.html"')
.container-fluid.passwd-pg
  form.form-enter.form(name='form', ng-submit='changePassword(form)', novalidate='')
    h1.text-center Change Password
    .divider-custom
    
    .form-group(ng-hide="isReset")
      label.sr-only Current Password
      input.form-control(type='password', name='password', ng-model='user.oldPassword', mongoose-error='', ng-required="!isReset", placeholder="Current Password")
      p.help-block(ng-show='form.password.$error.mongoose')
        | {{ errors.other }}

    .form-group
      label.sr-only New Password
      input.form-control(type='password', name='newPassword', ng-model='user.newPassword', ng-minlength='8', required='', placeholder="New Password")
      p.help-block(ng-show='(form.newPassword.$error.minlength || form.newPassword.$error.required) && (form.newPassword.$dirty || submitted)')
       | Password must be at least 8 characters.

      p.help-block  {{ message }}

    button.btn.btn-lg.btn-block.btn-primary(type='submit') Save
