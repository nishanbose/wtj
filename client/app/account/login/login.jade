  form.form-enter.form(name='form', ng-submit='login(form)', novalidate='')
    h2.form-singin-heading.text-center Welcome Back
    .divider-custom   
    label.sr-only Email
    input.email.form-control(type='text', name='email', ng-model='user.email', placeholder="Email Address")    
    label.sr-only Password
    input.password.form-control(type='password', name='password', ng-model='user.password', placeholder="Password")

    .has-error.text-center
      p.help-block(ng-show='form.email.$error.required && form.password.$error.required && submitted')
        | Please enter your email and password.
      p.help-block {{ errors.other }}

    button.btn.btn-success.btn-lg.btn-block.btn-login(type='submit') Login
    .divider-custom
    a.reset-pass(ng-click="resetPw()") Reset Password    
    a.sign-up.pull-right(ui-sref='signup') Sign Up    

