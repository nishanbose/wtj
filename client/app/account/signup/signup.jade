div(ng-include='"components/navbar/navbar.html"')
.container-fluid.signup-pg

  form.form-enter.form(name='form', ng-submit='register(form)', novalidate='')
    h2.form-singin-heading.text-center Create an Account
    .divider-custom
    .form-group(ng-class='{ "has-success": form.name.$valid && submitted,\
    "has-error": form.name.$invalid && submitted }')
      label.sr-only Name
      input.form-control(type='text', name='name', ng-model='user.name', required='', placeholder="Full Name")
      p.help-block(ng-show='form.name.$error.required && submitted')
        | A name is required

    .form-group(ng-class='{ "has-success": form.email.$valid && submitted,\
    "has-error": form.email.$invalid && submitted }')
      label.sr-only Email
      input.form-control(type='email', name='email', ng-model='user.email', required='', mongoose-error='', placeholder="Email Address")
      p.help-block(ng-show='form.email.$error.email && submitted')
        | Doesn't look like a valid email.
      p.help-block(ng-show='form.email.$error.required && submitted')
        | What's your email address?
      p.help-block(ng-show='form.email.$error.mongoose')
        | {{ errors.email }}

    .form-group(ng-class='{ "has-success": form.password.$valid && submitted,\
    "has-error": form.password.$invalid && submitted }')
      label.sr-only Password
      input.form-control(type='password', name='password', ng-model='user.password', ng-minlength='3', required='', mongoose-error='', placeholder="Password")
      p.help-block(ng-show='(form.password.$error.minlength || form.password.$error.required) && submitted')
        | Password must be at least 3 characters.
      p.help-block(ng-show='form.password.$error.mongoose')
        | {{ errors.password }}

    button.btn-block.btn.btn-primary.btn-lg.btn-block.btn-login(type='submit') Sign up with Email
    hr    
    p.text-center otherwise

    a.btn.btn-block.btn-lg.btn-facebook(href='', ng-click='loginOauth("facebook")')
      i.fa.fa-facebook
      |&nbsp;&nbsp;Signup with Facebook
