.container-fluid
  .row.intro.text-center
    .intro-inner
      h1 Explore and Share all things Jackson
      span A list based approach

.container.main-content
  .row.text-center.categories
    .h3.categories.col-xs-12 Categories
    span.category.col-md-4.text-center.col-xs-6
      button.btn.btn-primary(type="button", ui-sref="lists({ featured: true })") Featured
    span.category.col-md-4.text-center.col-xs-6(ng-repeat="cat in categories")
      button.btn.btn-info(type="button", ui-sref="lists({ category: cat._id })", class="cat_{{ toSlug(cat.name) }}") {{ cat.name }}

  .row.title-bar
    h2.col-sm-10.col-xs-12 Lists from Jackson
    button.btn.btn-primary.col-sm-2.col-xs-12(ng-show="canCreate", ng-click="newList()") 
      span.fa.fa-plus &nbsp; New List

  .row.order-by
    .form-group
      select.form-control(ng-model="order")
        option(value='popular') Popular
        option(value='recent') Recent

  list-of-lists(lists="lists")

